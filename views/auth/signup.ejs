<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
      <div class="col-md-6">

        <h2 class="text-center"><%= subtitle %></h2>

        <form action="/signup" method="POST" id="form-container" enctype="multipart/form-data row" role="form">
          <div class="form-group">
            <label for="first_name">First Name</label>
            <input id="first_name" type="text" name="first_name" placeholder="Name" class="form-control">
          </div>

          <div class="form-group">
            <label for="last_name">Last Name</label>
            <input id="last_name" type="text" name="last_name" placeholder="Last name" class="form-control">
          </div>


          <div class="form-group">
            <label for="email">Email</label>
            <input id="email" type="text" name="email" placeholder="Email" class="form-control">
          </div>

          <div class="form-group">
            <label for="username">Username</label>
            <input id="username" type="text" name="username" placeholder="Username" class="form-control">
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input id="password" type="password" name="password" placeholder="Your password" class="form-control">
          </div>

          <% if (typeof message !== "undefined") { %>
            <div class="error-message"><span class="alert"><%= message %></span></div>
          <% } %>

        <button class="btn btn-primary btn-lg btn-block">Create profile</button>
        <br>
          <p class="account-message">
            Do you already have an account?
            <a href="/login">Login</a>
          </p>
        </form>
      </div>
  </div>
</div>
